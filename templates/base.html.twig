<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}StyloValé{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">StyloValé</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" href="{{ path('app_dashboard') }}">Accueil</a>
                            <a class="nav-link" href="{{ path('app_pen_admin') }}">Stylo</a>
                            <a class="nav-link" href="{{ path('app_user_admin') }}">Utilisateurs</a>
                            <a class="nav-link" href="{{ path('app_brand_admin') }}">Marques</a>
                            <a class="nav-link" href="{{ path('app_color_admin') }}">Couleur</a>
                            <a class="nav-link" href="{{ path('app_type_admin') }}">Type</a>
                            <a class="nav-link" href="{{ path('app_material_admin') }}">Materiaux</a>
                        </div>
                    </div>
                    <div class="collapse navbar-collapse" style="position: absolute; right: 0;">
                        <div class="navbar-nav">
                            {% if app.user %}
                                <a class="nav-link" href="{{ path('app_logout') }}">Déconnecter</a>
                            {% else %}
                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            {% endif %}                
                        </div>
                    </div>
                </nav>
            {% endif %}      
        {% block body %}{% endblock %}

    </body>
</html>
